@model BWS.Profolio.ViewModels.GitHubClaimsViewModel

@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-2">
            <img src="@Model.GitHubAvatar" alt="" class="img-thumbnail" />
            <h4>@Model.GitHubName</h4>
            <p><i class="fab fa-github"></i><a href="@Model.GitHubUrl">@Model.GitHubLogin</a></p>
        </div>
        <div class="col-md-10">
            <h4>Repositories</h4>
            <div class="row">
                @foreach (var repo in Model.Repositories)
                {
                    if (!repo.Fork)
                    {
                        <div class="card bg-dark" style="width: 18rem; margin: 5px;">
                            <div class="card-body">
                                <h5 class="card-title"><a href="@repo.HtmlUrl" class="text-white">@repo.FullName</a></h5>
                                <p class="card-text text-white-50">
                                    @repo.Description
                                    <span class="badge badge-primary">@repo.Language</span>
                                </p>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
}